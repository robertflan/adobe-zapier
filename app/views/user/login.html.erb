<% provide(:title, "Login") %>
<section id="user-login">
	<div class="container">
		<div class="row">
			<div class="col-lg-7 col-md-12 col-sm-12 col-xs-12">

				<span>Good to see you</span>
                 <%= image_tag 'emotion.png', class: 'happy-emoj', alt: '' %>
				<p>You know...I've been doing my PDF think.It's been smooth automatin'</p>
				<form action="/account">
				  <div class="form-group">
				    <label for="useremail">EMAIL ADDRESS</label>
				    <input type="email" class="form-control" id="useremail" placeholder="hello@example" required="">
				  </div>
				  <div class="form-group">
				    <label for="userpassword">PASSWORD</label>
				    <input type="password" class="form-control" id="userpassword" placeholder="" required="" minlength="8">
				  </div>
         		 <%= button_to 'Login', account_path, class: 'btn black-btn'%>
				</form>
			</div>
			<div class="col-lg-5 col-md-12 col-sm-12 col-xs-12 hidden-md-down" >
				<div class="login-image plus-pattern  hide-mobile hide-tablet w-col w-col-5 w-col-stack">
					<div data-aos="zoom-in" data-aos-easing="ease-in-sine" data-aos-duration="600">
					<%= image_tag 'pdfz_pdfred.png', class: 'overlay z10', alt: '' %></div>
					<div class="overlay zbottom login-grid-position" data-aos="fade-left" data-aos-easing="ease-in-sine" data-aos-duration="600">
						<%= image_tag 'square-grid.png', class: '', alt: '' %>
					</div>
					<div class="plus-pattern clearboard"></div>
				</div>
			</div>
		</div>
		</div>
	</div>
</section>
<style type="text/css">
	#header .navbar .navbar-nav {
		display: none;
	}
</style>